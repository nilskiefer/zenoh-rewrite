{
    "C_Cpp.default.compileCommands": "${workspaceFolder}/.vscode/compile_commands.json",
    "cmake.configureOnOpen": false,
    "terminal.integrated.defaultProfile.osx": "Zephyr IDE Terminal",
    "terminal.integrated.env.osx": {
        "ZEPHYR_BASE": "${workspaceFolder}/firmware/external/zephyr",
        "PATH": "${workspaceFolder}/firmware/.venv/bin:/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:${env:PATH}"
    },
    "terminal.integrated.automationProfile.osx": {
        "path": "/bin/zsh",
        "args": [
            "-i"
        ]
    },
    "files.associations": {
        "primitives.h": "c",
        "array": "c",
        "complex": "c",
        "memory": "c",
        "istream": "c",
        "locale": "c",
        "variant": "c",
        "__hash_table": "cpp",
        "__tree": "cpp",
        "type_traits": "cpp",
        "forward_list": "cpp",
        "limits": "cpp",
        "ratio": "cpp",
        "zephyr.h": "c",
        "config.h": "c",
        "refcount.h": "c",
        "element.h": "c",
        "string.h": "c",
        "*.in": "cpp"
    },
}